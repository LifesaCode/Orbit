<UserControl x:Class="Orbit.Desktop.Components.WasteWaterStorageTankDataComponentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Orbit.Desktop.Components"
             xmlns:desktop="clr-namespace:Orbit.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="107.813" d:DesignWidth="180.313"
             >

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Content="{Binding ComponentName, FallbackValue=Component}" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentReport.Level, FallbackValue=0.0}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding CurrentValue.AlertLevel}" VerticalAlignment="Center"/>
        
    </Grid>
</UserControl>
